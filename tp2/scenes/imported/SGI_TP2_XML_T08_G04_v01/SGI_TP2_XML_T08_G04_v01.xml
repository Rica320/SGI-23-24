<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf>

    <!-- Credits of the original file go to Group 1, class 1 of course LAIG school year 2013/2014,
    FEUP, University of Porto -->

    <globals background="0 0 0 1" ambient="00 00 00 1" />

    <fog color="1.0 1.0 1.0 1.0" near="0.0" far="100.0" />

    <cameras initial="cam1">
        <perspective id="cam1"
            angle="60"
            near="0.1"
            far="1000"
            location="15 15 15"
            target="0 0.0 0" />

        <orthogonal id="cam2"
            near="0.1"
            far="1000"
            location="0 15 15"
            target="0.0 15 0.0"
            left="-5"
            right="5"
            bottom="-5"
            top="-5" />
    </cameras>

    <!-- bloco de texturas. Este bloco tem de existir mas pode estar vazio, se nao forem usadas
    texturas -->
    <textures>
        <texture id="floorTex" filepath="textures/floor.jpg" />
        <texture id="tableTex" filepath="textures/table.png" />
        <texture id="frameTex" filepath="textures/table.png" />
        <texture id="marbleTex" filepath="textures/marble.jpg" />
        <texture id="colTex" filepath="textures/col.jpg" />
        <texture id="paint1Tex" filepath="textures/paint1.jpg" />
        <texture id="paint2Tex" filepath="textures/paint2.jpg" />
    </textures>

    <materials>

        <material id="tableApp"
            color="0.8 0.8 0.8 1.0"
            emissive="0.0 0.0 0.0 0.0"
            specular="0 0 0 0"
            shininess="10"
            textureref="tableTex"
            texlength_s="1"
            texlength_t="1" />

        <material id="WallApp"
            emissive="0.0 0.0 0.0 1.0"
            color="0.2 0.0 0.0 1.0"
            specular="0 0 0 0"
            shininess="30"
            twosided="false" />

        <material id="floorApp"
            emissive="0.0 0.0 0.0 1"
            color="1.0 1.0 1.0 1.0"
            specular="0 0 0 0"
            shininess="30"
            textureref="floorTex"
            texlength_s="20"
            texlength_t="20"
            twosided="false" />

        <material id="marbleApp"
            emissive="0.0 0.0 0.0 1"
            color="1.0 1.0 1.0 1.0"
            specular="0 0 0 0"
            shininess="30"
            textureref="marbleTex"
            texlength_s="4"
            texlength_t="1"
            twosided="false" />

        <material id="colApp"
            emissive="0.0 0.0 0.0 1"
            color="1.0 1.0 1.0 1.0"
            specular="0 0 0 0"
            shininess="30"
            textureref="colTex"
            texlength_s="1"
            texlength_t="1"
            twosided="false" />

        <material id="frameApp"
            emissive="0.0 0.0 0.0 0"
            color="0.8 0.6 0.7 1.0"
            specular="0 0 0 0"
            shininess="30"
            twosided="false"
            textureref="frameTex"
            texlength_s="1"
            texlength_t="1" />

        <material id="paint1App"
            emissive="0.0 0.0 0.0 1"
            color="1.0 1.0 1.0 1.0"
            specular="0 0 0 0"
            shininess="30"
            textureref="paint1Tex"
            texlength_s="2"
            texlength_t="3"
            twosided="false" />

        <material id="paint2App"
            emissive="0 0 0.0 1"
            color="1.0 1.0 1.0 1.0"
            specular="0 0 0 0"
            shininess="30"
            textureref="paint2Tex"
            texlength_s="16"
            texlength_t="12"
            twosided="false" />
    </materials>

    <graph rootid="scene">

        <node id="scene">
            <children>
                <noderef id="Wall1" />
                <noderef id="Wall2" />
                <noderef id="Wall3" />
                <noderef id="Wall4" />
                <noderef id="floor" />

                <noderef id="table" />

                <noderef id="romanColumn" />
                <noderef id="romanColumn2" />

                <noderef id="painting1" />
                <noderef id="painting2" />


                <pointlight id="light1" enabled="true"
                    color="0.5 0.6 0.8 1"
                    intensity="100.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="false"
                    position="33.75 37.3 33.75"
                />

                <pointlight id="light2" enabled="true"
                    color="0.5 0.6 0.8 1"
                    intensity="100.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="false"
                    position="11.25 7.3 3.75"
                />

                <pointlight id="light3" enabled="true"
                    color="0.5 0.6 0.8 1"
                    intensity="100.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="false"
                    position="11.25 7.3 3.75"
                />

                <spotlight id="light4" enabled="true"
                    color="1.0 1.0 1.0 1"
                    intensity="100.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="true"
                    position="2 2 4"
                    target="0 0 0"
                    penumbra="1.0"
                    angle="10.0"
                />

                <directionallight id="light5" enabled="true"
                    color="1.0 1.0 1.0 1"
                    intensity="1.0"
                    castshadow="true"
                    position="2 2 4"
                />
            </children>
        </node>

        <node id="rectangle1">

            <transforms>
                <translate value3="0 0 -0.5" />
                <rotate value3="0 180.0 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="rectangle2">

            <transforms>
                <translate value3="0 0 0.5" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="rectangle3">

            <transforms>
                <translate value3="0 -0.5 0" />
                <rotate value3="90 0.0 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="rectangle4">

            <transforms>
                <translate value3="0 0.5 0" />
                <rotate value3="-90 0.0 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="rectangle5">

            <transforms>
                <translate value3="-0.5 0 0" />
                <rotate value3="0.0 -90.0 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="rectangle6">
            <transforms>
                <translate value3="0.5 0 0" />
                <rotate value3="0.0 90.0 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="unitCube">
            <children>
                <!-- Back -->
                <noderef id="rectangle1" />
                <!-- Front -->
                <noderef id="rectangle2" />
                <!-- Bottom -->
                <noderef id="rectangle3" />
                <!-- Top -->
                <noderef id="rectangle4" />
                <!-- Left -->
                <noderef id="rectangle5" />
                <!-- Right -->
                <noderef id="rectangle6" />
            </children>
        </node>

        <node id="leg">
            <transforms>
                <scale value3="0.06 0.5 0.06" />
            </transforms>

            <children>
                <noderef id="unitCube" />
            </children>
        </node>

        <node id="leg1">
            <transforms>
                <translate value3="0.7 0 0.45" />
            </transforms>

            <children>
                <noderef id="leg" />
            </children>
        </node>

        <node id="leg2">
            <transforms>
                <translate value3="0.7 0 -0.45" />
            </transforms>

            <children>
                <noderef id="leg" />
            </children>
        </node>

        <node id="leg3">
            <transforms>
                <translate value3="-0.70 0 0.45" />
            </transforms>

            <children>
                <noderef id="leg" />
            </children>
        </node>

        <node id="leg4">
            <transforms>
                <translate value3="-0.7 0 -0.45" />
            </transforms>

            <children>
                <noderef id="leg" />
            </children>
        </node>

        <node id="tableTop">
            <transforms>
                <translate value3="0 0.3 0" />
                <scale value3="1.5 0.08 1" />
            </transforms>

            <children>
                <noderef id="unitCube" />
            </children>
        </node>

        <node id="divider">
            <transforms>
                <rotate value3="90.0 0.0 0" />
                <translate value3="0 0 -0.65" />
                <scale value3="1.5 0.08 0.6" />
            </transforms>

            <children>
                <noderef id="unitCube" />
            </children>
        </node>

        <node id="romanColumnBase">
            <materialref id="marbleApp" />

            <children>
                <primitive>
                    <cylinder base="1.3" top="0.9" height="1.2" slices="32" stacks="32" />
                </primitive>
            </children>
        </node>

        <node id="romanColumnTop">
            <materialref id="marbleApp" />

            <transforms>
                <translate value3="0 8.5 0" />
            </transforms>

            <children>
                <primitive>
                    <cylinder base="0.9" top="1.3" height="1.2" slices="32" stacks="32" />
                </primitive>
            </children>
        </node>

        <node id="romanColumnMiddle">
            <transforms>
                <translate value3="0 4.5 0" />
            </transforms>

            <materialref id="colApp" />

            <children>
                <primitive>
                    <cylinder base="0.8" top="0.8" height="7.8" slices="32" stacks="32" />
                </primitive>
            </children>
        </node>

        <node id="romanColumn">
            <transforms>
                <translate value3="3 0.6 17" />
            </transforms>

            <children>
                <noderef id="romanColumnMiddle" />
                <noderef id="romanColumnTop" />
                <noderef id="romanColumnBase" />
            </children>
        </node>

        <node id="romanColumn2">
            <transforms>
                <translate value3="3 0.6 3" />
            </transforms>

            <children>
                <noderef id="romanColumnMiddle" />
                <noderef id="romanColumnTop" />
                <noderef id="romanColumnBase" />
            </children>
        </node>

        <node id="table">
            <transforms>
                <translate value3="10 0 10" />
                <translate value3="0 -0.8 0" />
                <scale value3="4.5 2.5 3" />
                <translate value3="0 0.5 0" />
            </transforms>

            <materialref id="tableApp" />

            <children>
                <noderef id="tableTop" />
                <noderef id="leg1" />
                <noderef id="leg2" />
                <noderef id="leg3" />
                <noderef id="leg4" />
                <noderef id="divider" />

            </children>
        </node>

        <node id="frame1">
            <transforms>
                <translate value3="6 5 0.1" />
                <scale value3="2.2 3.2 0.05" />
            </transforms>

            <materialref id="frameApp" />

            <children>
                <noderef id="unitCube" />
            </children>
        </node>

        <node id="paint1">
            <transforms>
                <translate value3="6 5 0.15" />
                <scale value3="2 3 1" />
            </transforms>

            <materialref id="paint1App" />

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="painting1">
            <transforms>
                <translate value3="5 1 -0.05" />
            </transforms>

            <children>
                <noderef id="paint1" />
                <noderef id="frame1" />
            </children>
        </node>

        <node id="frame2">
            <transforms>
                <translate value3="6 5 19.9" />
                <scale value3="16.5 12.5 0.05" />
            </transforms>

            <materialref id="frameApp" />

            <children>
                <noderef id="unitCube" />
            </children>
        </node>

        <node id="paint2">
            <transforms>
                <translate value3="6 5 19.8" />
                <scale value3="16 12 1" />
                <rotate value3="0 180 0" />
            </transforms>

            <materialref id="paint2App" />

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="painting2">
            <transforms>
                <translate value3="4 3 -0.05" />
            </transforms>

            <children>
                <noderef id="paint2" />
                <noderef id="frame2" />
            </children>
        </node>

        <node id="floor">
            <transforms>
                <translate value3="0 0 20" />
                <rotate value3="-90 0.0 0.0" />
            </transforms>

            <materialref id="floorApp" />

            <children>
                <primitive>
                    <rectangle xy1="0 0" xy2="20 20" />
                </primitive>
            </children>
        </node>

        <node id="Wall1">
            <transforms>
                <translate value3="0 0 0" />
                <rotate value3="0.0 0.0 0.0" />
            </transforms>

            <materialref id="WallApp" />

            <children>
                <primitive>
                    <rectangle xy1="0 0" xy2="20 20" />
                </primitive>
            </children>
        </node>

        <node id="Wall2">
            <transforms>
                <translate value3="0 0 20" />
                <rotate value3="0.0 90 0.0" />
            </transforms>

            <materialref id="WallApp" />

            <children>
                <primitive>
                    <rectangle xy1="0 0" xy2="20 20" />
                </primitive>
            </children>
        </node>

        <node id="Wall3">
            <transforms>
                <translate value3="20 0 0" />
                <rotate value3="0.0 -90 0.0" />
            </transforms>

            <materialref id="WallApp" />

            <children>
                <primitive>
                    <rectangle xy1="0 0" xy2="20 20" />
                </primitive>
            </children>
        </node>

        <node id="Wall4">
            <transforms>
                <translate value3="20 0 20" />
                <rotate value3="0.0 180 0.0" />
            </transforms>

            <materialref id="WallApp" />

            <children>
                <primitive>
                    <rectangle xy1="0 0" xy2="20 20" />
                </primitive>
            </children>
        </node>


    </graph>
</yaf> 