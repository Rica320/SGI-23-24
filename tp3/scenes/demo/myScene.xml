<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf>
    <globals background="0.1 0.1 0.1 1" ambient="0.8 0.8 0.8 1" />

    <fog color="0 0 0 0" near="0.0" far="250.0" />

    <cameras initial="cam1">
        <perspective id="cam1"
            angle="60"
            near="0.1"
            far="1000"
            location="100 20 30"
            target="0 0 0" />

        <orthogonal id="cam2"
            near="-50"
            far="100"
            location="0 0 20"
            target="0 0 0"
            left="-5"
            right="5"
            bottom="-5"
            top="5" />
    </cameras>

    <skybox
        size="180 180 180"
        center="0 0 0"
        emissive="0 0 0 0"
        intensity="100"
        left="textures/stars.jpg"
        right="textures/stars.jpg"
        front="textures/stars.jpg"
        back="textures/stars.jpg"
        up="textures/stars.jpg"
        down="textures/stars.jpg" />


    <textures>


    </textures>

    <materials>

    
        <material id="room"
            emissive="0.2 0.4 0.5 1"
            color="1 1 1 1.0"
            specular="0.0 0.0 0.0 1.0"
            shininess="0"
            twosided="true"
        />

    </materials>

    <graph rootid="scene">

        <node id="scene">
            <children>
                <noderef id="lights" />

                <noderef id="square" />

            </children>
        </node>

        <node id="lights">
            <children>


                <spotlight id="light1" enabled="true"
                    color="1.0 1.0 1.0 1"
                    intensity="100.0"
                    distance="40"
                    decay="0.75"
                    castshadow="false"
                    position="19 19 19"
                    target="0 0 0"
                    penumbra="1"
                    angle="30"
                />

            </children>
        </node>

        <node id="square">

            <materialref id="room" />

            <children>
                <primitive>
                    <model3d filepath="objs/porshe/scene.gltf" />
                </primitive>
            </children>
        </node>
    </graph>
