<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf>
    <globals background="0.7 0.7 0.7 1" ambient="1 1 1 1" />

    <fog color="0 0 0 0" near="0.0" far="500.0" />

    <cameras initial="cam1">
        <perspective id="cam1"
            angle="60"
            near="0.1"
            far="1000"
            location="100 20 30"
            target="0 0 0" />

        <orthogonal id="cam2"
            near="-50"
            far="100"
            location="0 0 20"
            target="0 0 0"
            left="-5"
            right="5"
            bottom="-5"
            top="5" />
    </cameras>

    <skybox
        size="430 100 430"
        center="125 40 125"
        emissive="0 0 0 1"
        intensity="100"
        up="textures/skybox/sky_box_1.png"
        down="textures/skybox/sky_box_2.png"
        back="textures/skybox/sky_box_3.png"
        left="textures/skybox/sky_box_4.png"
        front="textures/skybox/sky_box_5.png"
        right="textures/skybox/sky_box_6.png" />

    <textures>

        <texture id="metalTex" filepath="textures/metal.jpg" />

    </textures>

    <materials>


        <material id="metalMat"
            emissive="0.0 0.0 0.0 1"
            color="0.20 0.20 0.20 1.0"
            specular="0.5 0.5 0.5 1.0"
            shininess="30"
            textureref="metalTex"
            texlength_s="1"
            texlength_t="1"
            twosided="true" />


    </materials>

    <graph rootid="scene">

        <node id="scene">
            <children>
                <noderef id="lights" />
                <noderef id="kart_1" />
                <noderef id="kart_2" />
            </children>
        </node>

        <node id="lights">
            <children>


                <spotlight id="light1" enabled="true"
                    color="1.0 1.0 1.0 1"
                    intensity="100.0"
                    distance="40"
                    decay="0.75"
                    castshadow="false"
                    position="19 19 19"
                    target="0 0 0"
                    penumbra="1"
                    angle="30"
                />


                <spotlight id="sun" enabled="true"
                    color="1.0 1.0 1.0 1"
                    intensity="15.0"
                    distance="255"
                    decay="0.1"
                    castshadow="false"
                    position="125 124 125"
                    target="125 0 125"
                    penumbra="1"
                    angle="80"
                />


            </children>
        </node>


        <node id="kart_1">
            <transforms>
                <translate value3="3 2 5" />
            </transforms>
            <children>
                <primitive>
                    <model3d filepath="objs/kart_yoshi/kart_yoshi.dae" />
                </primitive>
            </children>
        </node>

        <node id="kart_2">
            <transforms>
                <translate value3="3 2 8" />
            </transforms>
            <children>
                <primitive>
                    <model3d filepath="objs/kart_mario/kart_mario.dae" />
                </primitive>
            </children>
        </node>


    </graph>
</yaf> 